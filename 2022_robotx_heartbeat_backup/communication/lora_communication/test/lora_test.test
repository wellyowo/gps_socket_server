<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="port_host" default="/dev/ttyACM0" />
  <arg name="port_client" default="/dev/ttyACM1" />

  <test test-name="loraTester_node" pkg="lora_communication" type="lora_tester.py">
  </test>

  <include file="$(find lora_communication)/launch/lora_host.launch">
    <arg name="port" value="$(arg port_host)" />
  </include>

  <include file="$(find lora_communication)/launch/lora_client.launch">
  <arg name="port" value="$(arg port_client)" />
  </include>

</launch>